  // TAMPILKAN MAKANAN  
  const makananSection = document.getElementById("makanan");  
  menuMakanan.forEach(item=>{  
    let div = document.createElement("div");  
    div.className = "menu-item";  
    div.innerHTML = `<img src="${item.gambar}" alt="${item.nama}">  
                     <p><strong>${item.nama}</strong></p>  
                     <p class="price">${formatRupiah(item.harga)}</p>  
                     <button onclick="tambahPesanan('${item.nama}', ${item.harga})">Tambah</button>`;  
    makananSection.appendChild(div);  
  });  
  
  // TAMPILKAN MINUMAN  
  const minumanSection = document.getElementById("minuman");  
  menuMinuman.forEach(item=>{  
    let div = document.createElement("div");  
    div.className = "menu-item";  
    div.innerHTML = `<img src="${item.gambar}" alt="${item.nama}">  
                     <p><strong>${item.nama}</strong></p>  
                     <p class="price">${formatRupiah(item.harga)}</p>  
                     <button onclick="tambahPesanan('${item.nama}', ${item.harga})">Tambah</button>`;  
    minumanSection.appendChild(div);  
  });  
</script>
