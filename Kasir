<script>
function ubahMetode() {
  let metode = document.getElementById("metodeBayar").value;
  if (metode === "tunai") {
    document.getElementById("tunaiForm").style.display = "block";
    document.getElementById("qrisForm").style.display = "none";
  } else {
    document.getElementById("tunaiForm").style.display = "none";
    document.getElementById("qrisForm").style.display = "block";
  }
}
</script>
  <script>  
  let pesanan = {};  
  
  function formatRupiah(angka) {  
    return "Rp " + angka.toLocaleString("id-ID");  
  }  
  
  function tambahPesanan(nama, harga) {  
    if (pesanan[nama]) {  
      pesanan[nama].jumlah++;  
    } else {  
      pesanan[nama] = { harga: harga, jumlah: 1 };  
    }  
    updateTabel();  
  }  
  
  function hapusPesanan(nama) {  
    delete pesanan[nama];  
    updateTabel();  
  }  
  
 function updateTabel() {
  const tbody = document.querySelector("#tabelPesanan tbody");
  tbody.innerHTML = "";
  let subtotal = 0;
  for (let nama in pesanan) {
    let item = pesanan[nama];
    let itemSubtotal = item.harga * item.jumlah;
    subtotal += itemSubtotal;
    let tr = `<tr>
                <td>${nama}</td>
                <td>${formatRupiah(item.harga)}</td>
                <td>${item.jumlah}</td>
                <td>${formatRupiah(itemSubtotal)}</td>
                <td><button class="btn-hapus" onclick="hapusPesanan('${nama}')">Hapus</button></td>
              </tr>`;
    tbody.innerHTML += tr;
  }

  // Hitung pajak 10%
  let pajak = subtotal * 0.1;
  let total = subtotal + pajak;

  document.getElementById("subtotalHarga").innerText = formatRupiah(subtotal);
  document.getElementById("pajakHarga").innerText = formatRupiah(pajak);
  document.getElementById("totalHarga").innerText = formatRupiah(total);

  hitungKembalian();
}
function hitungKembalian() {
  let totalText = document.getElementById("totalHarga").innerText.replace(/[^0-9]/g, "");
  let total = parseInt(totalText) || 0;
  let bayar = parseInt(document.getElementById("uangDibayar").value) || 0;
  let kembali = bayar - total;
  document.getElementById("kembalian").innerText = formatRupiah(kembali >= 0 ? kembali : 0);
}

// Tambahkan fungsi baru ini
function bayar() {
  // Cek apakah ada pesanan di keranjang
  if (Object.keys(pesanan).length === 0) {
    alert("Keranjang pesanan masih kosong!");
    return; // Berhenti jika tidak ada pesanan
  }

  // Konfirmasi pembayaran
  const totalBayarText = document.getElementById("totalHarga").innerText;
  if (confirm(`Total yang harus dibayar adalah ${totalBayarText}. Apakah Anda yakin ingin menyelesaikan pembayaran?`)) {
    // Reset keranjang pesanan
    pesanan = {};

    // Perbarui tabel dan harga di kasir
    updateTabel();

    // Reset input uang dibayar dan kembalian
    document.getElementById("uangDibayar").value = "";
    document.getElementById("kembalian").innerText = formatRupiah(0);

    alert("Pembayaran berhasil! Kasir siap untuk pesanan selanjutnya.");
  }
}
  
